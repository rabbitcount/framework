<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="customerService" class="com.ocelot.sourcecode.spring.aop.plain.services.CustomerService">
        <property name="name" value="Yong Mook Kim" />
        <property name="url" value="http://www.mkyong.com" />
    </bean>

    <bean id="hijackBeforeMethodBean" class="com.ocelot.sourcecode.spring.aop.usecase.advice.HijackBeforeMethod" />

    <bean id="hijackAfterMethodBean" class="com.ocelot.sourcecode.spring.aop.usecase.advice.HijackAfterMethod" />

    <bean id="hijackThrowExceptionBean" class="com.ocelot.sourcecode.spring.aop.usecase.advice.HijackThrowException" />

    <bean id="hijackAroundMethodBean" class="com.ocelot.sourcecode.spring.aop.usecase.advice.HijackAroundMethod" />

    <bean id="customerBeforeAndAfterServiceProxy"
          class="org.springframework.aop.framework.ProxyFactoryBean">

        <property name="target" ref="customerService" />

        <property name="interceptorNames">
            <list>
                <value>hijackBeforeMethodBean</value>
                <value>hijackAfterMethodBean</value>
            </list>
        </property>
    </bean>

    <bean id="customerServiceThrowExceptionProxy"
          class="org.springframework.aop.framework.ProxyFactoryBean">

        <property name="target" ref="customerService" />

        <property name="interceptorNames">
            <list>
                <value>hijackThrowExceptionBean</value>
            </list>
        </property>
    </bean>

    <bean id="customerAroundServiceProxy"
          class="org.springframework.aop.framework.ProxyFactoryBean">

        <property name="target" ref="customerService" />

        <property name="interceptorNames">
            <list>
                <value>hijackAroundMethodBean</value>
            </list>
        </property>
    </bean>
</beans>